<div class="col-md-12">
  <h2 class="text-center">我参加的讨论版</h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Description </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td> # </td>
            <td> <%= group.title %> </td>
            <td> <%= group.description %> </td>
            <td> <%= group.posts.count %> </td>
            <td> <%= group.updated_at %> </td>
          </tr>
        <% end %>
     </tbody>
   </table>
  </div>
